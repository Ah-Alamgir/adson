<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/margin_50" />
            <stroke
                android:width="2dp"
                android:color="@color/whiteAndDark" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/whiteAndDark"
                android:startColor="@color/whiteAndDark"
                android:angle="270"/>
            <corners android:radius="@dimen/margin_30" />
        </shape>
    </item>

</layer-list>