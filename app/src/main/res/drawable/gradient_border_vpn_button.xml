<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@color/border_b"
                android:startColor="@color/border_a" />
            <corners android:radius="@dimen/margin_50" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="@dimen/padding_3"
        android:right="@dimen/padding_3"
        android:top="3dp">

        <shape
            android:shape="rectangle">
            <solid android:color="@color/whiteAndDark" />
            <corners android:radius="@dimen/margin_50" />
        </shape>
    </item>
</layer-list>